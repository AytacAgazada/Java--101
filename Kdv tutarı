package projeler;

import java.util.Scanner;
public class kdvutari {
    public static void main(String[] args) {
        double tutar;
        Scanner paraMiktari=new Scanner(System.in);
        System.out.print("Para miktar覺n覺 girin: ");

        double para = paraMiktari.nextDouble();

        double kdvOrani;
        if (para <= 1000) {
            kdvOrani = 0.18;
        } else {
            kdvOrani = 0.08;
        }

        double kdvTutari = para * kdvOrani;
        double kdvliFiyat = para + kdvTutari;

        System.out.println("KDV'siz Fiyat: " + para);
        System.out.println("KDV Oran覺: %" + (kdvOrani * 100));
        System.out.println("KDV Tutar覺: " + kdvTutari);
        System.out.println("KDV'li Fiyat: " + kdvliFiyat);


    }

}
