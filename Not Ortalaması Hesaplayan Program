package projeler;

import java.util.Scanner;
public class notortalama {
    public static void main(String[] args) {
        //deyishenleri teyin et
        int math,fizik,kimya,turkche,tarih,muzik;
        //scanneri tanimla
        Scanner not=new Scanner(System.in);
        System.out.print("Matematik Notunuz: ");
        math=not.nextInt();

        System.out.print("Fizik Notunuz: ");
        fizik=not.nextInt();

        System.out.print("Kimya Notunuz: ");
        kimya=not.nextInt();

        System.out.print("Turkche Notunuz: ");
        turkche=not.nextInt();

        System.out.print("Tarih Notunuz: ");
        tarih=not.nextInt();

        System.out.print("Mwzik Notunuz: ");
        muzik=not.nextInt();
        int toplam=(math+fizik+kimya+turkche+tarih+muzik);
        //neticeni tam dogru olmasi icin double
        double sonuc=toplam/6.0;
        System.out.println("Ortalamaniz: " +sonuc);
        if (sonuc>60){
            System.out.println("Sınıfı Geçti");
        } else {
            System.out.println("Sınıfta Kaldı");
        }

    }
}
