
import java.util.Scanner;
public class kdvutari {
    public static void main(String[] args) {
        double tutar,kdvoran=0.18,kdvtutar,kdvlitutar;
        Scanner paraMiktari=new Scanner(System.in);
        System.out.print("Para miktar覺n覺 girin: ");
        tutar=paraMiktari.nextInt();
        kdvtutar=tutar*kdvoran;
        kdvlitutar=tutar+kdvtutar;
        System.out.println("KDV'siz Fiyat: " + tutar);
        System.out.println("KDV Oran覺: %" + (kdvoran * 100));
        System.out.println("KDV Tutar覺: " + kdvtutar);
        System.out.println("KDV'li Fiyat: " + kdvlitutar);



    }

}
